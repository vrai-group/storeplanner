<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <arg name="world"  default="textured_store_2"/> <!-- textured_store_2 or empty --> 
  <arg name="gui" default="true"/> <!-- set to false to disable visualization -->
  <arg name="debug" default="false"/>
  <arg name="recording" default="false"/>
  <arg name="extra_gazebo_args" default=""/>
  <arg name="extra_gz_model_path" default=""/>
  <arg name="extra_gz_resource_path" default=""/>

<!-- required with gazebo-9 to remap where to find world and models -->
  <env name="GAZEBO_MODEL_PATH" value="$(arg extra_gz_model_path):$(find storeplanner)/models:$(find storeplanner)/models:$(optenv GAZEBO_MODEL_PATH)"/>
  <env name="GAZEBO_RESOURCE_PATH" value="$(arg extra_gz_resource_path):$(find storeplanner)/worlds:$(find storeplanner):$(optenv GAZEBO_RESOURCE_PATH)"/>

  <!-- start up empty world as base -->
  <include file="$(find storeplanner)/launch/visualization/empty_world.launch">
    <!-- world_name is relative to directories in GAZEBO_RESOURCE_PATH-->
    <arg name="world_name" value="worlds/$(arg world).world"/>
    <arg name="extra_gazebo_args" value="$(arg extra_gazebo_args)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="recording" value="$(arg recording)"/>
  </include>
</launch>
